<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    tools:context=".activity.SplashActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/splash_activity_layout_width"
        android:layout_height="@dimen/splash_activity_layout_height"
        android:layout_marginStart="@dimen/splash_activity_layout_marginStart"
        android:layout_marginTop="@dimen/splash_activity_layout_marginTop"
        android:layout_marginEnd="@dimen/splash_activity_layout_marginEnd"
        android:layout_marginBottom="@dimen/splash_activity_layout_marginBottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>